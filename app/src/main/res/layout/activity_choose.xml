<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    tools:context=".ChooseRouteActivity">

    <TextView
        android:id="@+id/textViewStartPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="15dp"
        android:text="@string/startLabel"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <!--<Spinner
        android:id="@+id/listFirst"
        android:layout_width="match_parent"
        android:layout_height="40dp" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startPoint"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="@string/notChoose"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>

        <Button
            android:id="@+id/buttonChooseStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chooseButton"
            android:onClick="buttonChooseStart"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewEndPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:text="@string/finishLabel"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <!--<Spinner
        android:id="@+id/listLast"
        android:layout_width="match_parent"
        android:layout_height="40dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/finishPoint"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="@string/notChoose"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>

        <Button
            android:id="@+id/buttonChooseEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chooseButton"
            android:onClick="buttonChooseEnd"/>

    </LinearLayout>

    <Button
        android:id="@+id/start"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/startButton" />
</LinearLayout>