<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <Button

        android:id="@+id/callHelp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:drawableBottom="@drawable/ic_add_alert_black_24dp" />

    <Button
        android:id="@+id/addRoute"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="0dp"
        android:drawableBottom="@drawable/ic_add_location_black_24dp"
        android:layout_gravity="bottom"
        android:onClick="addRouteOnClick" />

    <Button
        android:id="@+id/buttonLocalizeMe"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginTop="450dp"
        android:onClick="buttonLocalizeMeOnClick" />

    <Button
        android:id="@+id/buttonUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_arrow_drop_up_black_24dp"
        android:layout_gravity="right"/>

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        />


</FrameLayout>